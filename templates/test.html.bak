<!DOCTYPE html>
<html>
<head>
    <title>Data Collection Form</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
   <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300&display=swap" rel="stylesheet">
    <style>
	* {
          box-sizing: border-box;
   }
        
                /* Form styling */
       
        /* Input styling */
        input {
            width: 30%;
            padding: 8px 15px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 6px;
        }
		
		h5 {
           font-size: 1rem;
		   margin-bottom:0px;
		   padding-bottom:0px;
		   font-family: Lato,'Helvetica Neue',Arial,Helvetica,sans-serif;
           line-height: 1.28571429e
        }
        
        /* Input label styling */
        label {

            margin-bottom: 10px;
            font-weight: bold;
			font-family: roboto slab,sans-serif;
        }
        
        /* Button styling */
        button {
            cursor: pointer;
			display:block;
            border: none;
            padding: 7px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
			font-weight:bold;
			border-radius:3px;
			background-color: #2185d0;
            text-shadow: none;
            font-family: Lato,'Helvetica Neue',Arial,Helvetica,sans-serif
			background-color: #2185d0;
            color: #fff;
            text-shadow: none;
            background-image: none;
        }
        
		.row {
           display: flex;
           flex-direction: row;
           flex-wrap: wrap;
           max-width: 100%;
         }

      .column {
          display: flex;
           flex-direction: column;
           flex-basis: 80%;
           
   }
   
     .some-page-wrapper {
             margin: 15px;
			 padding:50px
			 
			 
            
}


.blue-column {
  max-height:100%;
 
}

.green-column {
  
  padding:10px;
 
}

h1 {
    border-bottom: 1px solid #dedede;
    font-size: 2.1em;
    color: #822;
    padding-bottom: 10px;
    margin-bottom: 14px;
}

h1, h2, h3 {
    font-family: roboto slab,sans-serif;
    font-weight: 400;
    line-height: 1.2em;
	
}

h1 {
    display: block;
    font-size: 2em;
    margin-block-start: 0.67em;
    margin-block-end: 0.67em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
    font-weight: bold;
}

.flex-container {
  display: flex;
  flex-direction: column;
  font-size: 20px;
  text-align: left;
 
}

.unix-time-font-size{
	font-size:15px;
	color: #822;
	

}

.green-column > p{
	font-family: roboto slab,sans-serif;

}

.roboto-font {
   font-family: roboto slab,sans-serif;

}

form {
		

}

.h2-input-labels {
    font-size: 1em;
    color: #143470;
    margin-bottom: 14px;
    padding: 0;
	font-weight: bold;


.form-inline {  
  display: flex;
  flex-flow: row wrap;
  align-items: center;
}

.output-box {
  word-break: break-all;
  width:200px;
}
    </style>
</head>
<body>
       <div>
		  <h1> Epoch & Unix Timestamp Conversion Tools</h1>
      </div>
	  
	  
  
   <div class='some-page-wrapper'>
  <section> 
  <div class='row'>
    <div class='column'>
      <div class='blue-column'>
        <form action="test" method="post">
        <h2 for="unix_time" class="h2-input-labels">Enter a Timestap:</h5>
        <input type="number" name="unix_time" id="unix_time" required>
         <button type="submit" value="Submit"> Convert</button>
		
     </form>
      </div>
    </div>
    <div class='column'>
      <div class='green-column flex-container'>
        <div>{% if date_covert %}
		<h3 style="margin-bottom:0px;margin-top:0px;"> Epoch Unix time</h3>
			 <p  style="padding:0px; margin:0px"> Converted unix time: <span class="unix-time-font-size" style="color:red;">{{ date_covert }}</span></p>
		{% endif %}
		</div>
		<div>
		  <p  style="padding:0px; margin:0px;font-size:18px"> Unix time in second: <span id="unix-time" class="unix-time-font-size"></span> </p>
		  <p style="padding:0px; margin:0px;font-size:18px;"> Local time zone: <span id="unix-time-date" class="unix-time-font-size"></span> </p>
		</div>
      </div>
    </div>
  </div>
  </section>
  
  <section>
  <div class='row'>
    <div class='column'>
      <div class='blue-column'>
	  
        <form action="test2" method="post"> 
			<h2 class="h2-input-labels"> Enter base64 encoded data for decoding: <br/> <code>Note: Decodes multiple rounds of base64 encoded string</code></h2>
			
			<input name="base64_data" id="base64_data" required></input>
			<button type="submit" value="Submit">Decode</button>
	    </form>
	
      </div>
    </div>
    <div class='column'>
      <div class='green-column flex-container'>
        <div>{% if base64_convert %}
		<h3 style="margin-bottom:0px;margin-top:0px;"> Base64 Decoded data:</h3>
			 <div>
			    <p  style="padding:5px; margin:2px; width:300px;word-break: break-all;box-shadow: rgba(67, 71, 85, 0.27) 0px 0px 0.25em, rgba(90, 125, 188, 0.05) 0px 0.25em 1em;">  
			       <code style="font-size:15px;">{{ base64_convert }}</code>
			    </p>
			 </div>
			 <p  style="padding:0px; margin:0px"> Encoded rounds: <span class="unix-time-font-size" style="color:red;">{{ encoded_rounds }}</span></p>
			 {% elif base64error %}
			        <code style="color:red; font-size:15px;"> {{ base64error }}</code>
		     {% endif %}

		</div>
		<div>
		 
		  
		</div>
      </div>
    </div>
  </div>
  </section>
  
  
  <section>
  <div class='row'>
    <div class='column'>
      <div class='blue-column'>
	  
        <form action="test3" method="post">
	
	        <h2  class="h2-input-labels">Enter IPv4/IPv6 for binary notation conversion:</h2>
            <input name="ip_convert" id="ip_convert" required></input>    
            <button type="submit" value="Submit"> Convert</button>
	    </form>
	
      </div>
    </div>
    <div class='column'>
      <div class='green-column flex-container'>
        <div>{% if binary_ip %}
		<h3 style="margin-bottom:0px;margin-top:0px;"> {{ip_version}} Binary Notation:</h3>
			 <div>
			    <p  style="padding:0px; margin:0px; width:300px;word-break: break-all;box-shadow: rgba(67, 71, 85, 0.27) 0px 0px 0.25em, rgba(90, 125, 188, 0.05) 0px 0.25em 1em">  {{ binary_ip }}</p>
			 </div>
			  {% elif error %}
			        <p> {{ error }}</p>
		     {% endif %}
		 
		</div>
		<div>
		
		  
		</div>
      </div>
    </div>
  </div>
  </section>
  
  
  <section>
   <div class='row'>
    <div class='column'>
      <div class='blue-column'>
	   <section>
        <form action="test4" method="post">
	       <h2 class="h2-input-labels"> Enter IPv4 and subnet mask in slash notation:</h2>
            <input name="ip" id="ip" required></input>
	       <label class="h2-input-labels">Subnetmask: /</label>
		   <input style="width:3%;"  name="subnet_mask" id="ip_subnet" required></input>
           <button type="submit" value="Submit">Convert</button>

	   </form>
	  </section>
      </div>
    </div>
    <div class='column'>
      <div class='green-column flex-container'>
        <div>{% if ip_subnet %}
		<h3 style="margin-bottom:0px;margin-top:0px;"> Subnet address:</h3>
			 <p  style="padding:0px; margin:0px"> Subnet: <span class="unix-time-font-size" style="color:red;">{{ ip_subnet }}</span></p>
		{% endif %}
		</div>
		<div>
		
		  
		</div>
      </div>
    </div>
  </div>
  </section>
  
  
</div>
     
	
	
	
	
	
	
	 <script>
        // Get the element where the Unix time will be displayed
        var unixTime = document.getElementById("unix-time");
		var unixTimeDate = document.getElementById("unix-time-date");

        // Update the Unix time every second
        setInterval(function() {
            var currentTime = Math.floor(Date.now() / 1000);
			var currentTimeDate = new Date(currentTime*1000)
			console.log(currentTimeDate)
            unixTime.textContent = currentTime;
			unixTimeDate.textContent = currentTimeDate;
        }, 1000);
		
    </script>
</body>
</html>
</body>
</html>
